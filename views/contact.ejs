<%- include('page-header') -%>

<div class="gtco-section">
	<div class="gtco-container">
		<div class="row">
			<div class="col-md-12">
				<div class="col-md-6 animate-box">

					<% if (typeof success === 'string') { %>
                    <div class="alert alert-success" role="alert">
                        <%=success%>
                    </div>
                    <% } %>
                    <% if (typeof error === 'string') { %>
                    <div class="alert alert-danger" role="alert"> <strong>Ops!</strong> <%=error%>
                    </div>
                    <% } %>

					<h3>Entre em Contato</h3>
					<form action="/contact" method="POST">
						<div class="row form-group">
							<div class="col-md-12">
								<label class="sr-only" for="name">Nome</label>
								<input type="text" name="name" id="name" class="form-control" placeholder="Seu nome" value="<%=body.name%>">
							</div>
						</div>
						<div class="row form-group">
							<div class="col-md-12">
								<label class="sr-only" for="email">E-mail</label>
								<input type="text" name="email" id="email" class="form-control" placeholder="Seu endereço de e-mail" value="<%=body.email%>">
							</div>
						</div>
						<div class="row form-group">
							<div class="col-md-12">
								<label class="sr-only" for="message">Mensagem</label>
								<textarea name="message" id="message" cols="30" rows="10" class="form-control" placeholder="Escreve alguma coisa"><%=body.message%></textarea>
							</div>
						</div>
						<div class="form-group">
							<input type="submit" value="Enviar" class="btn btn-primary">
						</div>

					</form>
				</div>
				<div class="col-md-5 col-md-push-1 animate-box">

					<div class="gtco-contact-info">
						<h3>Informações de Contato</h3>
						<ul>
							<li class="address">Rua xxxxxx-xxxxx-xxxx-xxxxx<br> Fortaleza - CE</li>
							<li class="phone"><a href="">(85)98415.4432</a></li>
							<li class="email"><a href="mailto:thiagofreitas.flp@gmail.com">thiagofreitas.flp@gmail.com</a></li>
							<li class="url"><a href="thiagofreitas.flp@gmail.com">thiagofreitas.flp@gmail.com</a></li>
						</ul>
					</div>


				</div>
			</div>
		</div>
	</div>
</div>

<%- include('page-footer') -%>